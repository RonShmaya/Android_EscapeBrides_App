<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B668AD">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/menu_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="Welcome --------"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/main_IC_escape"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@+id/menu_LBL_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_escape" />

        <LinearLayout
            android:id="@+id/menu_LAY_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_IC_escape"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_arrow_play"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:background="@drawable/imp_crazy_bride"
                android:text="Arrow"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="#E0D4D4"
                app:backgroundTintMode="multiply" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_sensor_play"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_below="@+id/menu_BTN_arrow_play"
                android:layout_alignStart="@+id/menu_BTN_arrow_play"
                android:layout_margin="16dp"
                android:background="@drawable/imp_crazy_bride"
                android:text="Sensor"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="#E0D4D4"
                app:backgroundTintMode="multiply" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_BTN_top_10"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_below="@+id/menu_BTN_sensor_play"
                android:layout_alignStart="@+id/menu_BTN_arrow_play"
                android:layout_margin="16dp"
                android:background="@drawable/imp_crazy_bride"
                android:text="TOP 10"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="#E0D4D4"
                app:backgroundTintMode="multiply" />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>